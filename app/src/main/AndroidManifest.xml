<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="nl.mheijden.prog3app">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".controllers.activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".controllers.activities.DashboardActivity" />
        <activity android:name=".controllers.activities.MealsActivity" />
        <activity android:name=".controllers.activities.NewMealActivity" />
        <activity android:name=".controllers.activities.StudentsActivity" />
        <activity android:name=".controllers.activities.AccountsActivity" />
        <activity android:name=".controllers.activities.MealsActivity_Detail" />
        <activity android:name=".controllers.activities.RegisterActivity" />
        <activity android:name=".controllers.activities.MealsActivity_Join"></activity>
    </application>

</manifest>